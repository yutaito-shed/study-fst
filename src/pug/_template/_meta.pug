    /**
     * page.meta.title
     * - 大元のタイトルに | でつなぐ
     * @type {Array}
     */
    var title = metaData.title;
    if (page.meta && page.meta.title) {
        for (var i = 0; i < page.meta.title.length; i++) {
            title = page.meta.title[i] + ' | ' + title;
        };
    };
-
