//---------- keywords ----------//
-
    /**
     * page.meta.key
     * - 既存のkeywordsの末尾に追加
     * @type {Array}
     */
    var key = '';
    var keyArray = metaData.keywords;
    if (keyArray) {
        for (var i = 0; i < keyArray.length; i++) {
            if (i != 0) { key += ',' };
            key += keyArray[i];
        };
        if (page.meta && page.meta.key && page.meta.key.length != 0) {
            for (var i = 0; i < page.meta.key.length; i++) {
                key += ',' + page.meta.key[i];
            };
        };
    };
-
- if (key != '')
    meta(name="keywords" content=key)


